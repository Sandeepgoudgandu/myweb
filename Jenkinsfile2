pipeline {
    agent any

    options {
        skipDefaultCheckout(true)
        timestamps()
    }

    tools {
        maven 'Maven-3.8.7'
    }

    environment {
        SONAR_HOST_URL    = 'http://65.2.148.229:9000'
        SONAR_PROJECT_KEY = 'myweb'
        MAVEN_VERSION     = '8.2.0'
        WAR_FILE          = "target/myweb-${MAVEN_VERSION}.war"
    }

    stages {

        stage('Checkout') {
            steps {
                git credentialsId: 'git-pat',
                    url: 'https://github.com/Sandeepgoudgandu/myweb.git',
                    branch: 'master'
            }
        }

        stage('SonarQube Analysis & Build') {
            steps {
                withCredentials([
                    string(credentialsId: 'sonar-token', variable: 'SONAR_TOKEN')
                ]) {
                    sh """
                        mvn clean package sonar:sonar \
                        -Dsonar.projectKey=${SONAR_PROJECT_KEY} \
                        -Dsonar.host.url=${SONAR_HOST_URL} \
                        -Dsonar.login=${SONAR_TOKEN}
                    """
                }
            }
        }

        stage('Upload WAR to Nexus') {
            steps {
                nexusArtifactUploader(
                    nexusVersion: 'nexus3',
                    protocol: 'http',
                    nexusUrl: '172.31.38.99:8081',
                    groupId: 'in.javahome',
                    version: "${MAVEN_VERSION}",
                    repository: 'maven-releases',
                    credentialsId: 'nexus3',
                    artifacts: [
                        [
                            artifactId: 'myweb',
                            classifier: '',
                            file: "${WAR_FILE}",
                            type: 'war'
                        ]
                    ]
                )
            }
        }

        stage('Deploy To Kubernetes Cluster') {
            steps {
                withCredentials([
                    file(credentialsId: 'KUBERNETES_CLUSTER_CONFIG', variable: 'KUBECONFIG')
                ]) {
                    sh '''
                        export KUBECONFIG=$KUBECONFIG
                        kubectl apply -f springBoot.yml
                        kubectl rollout status deployment/myweb
                    '''
                }
            }
        }
    }

    post {
        success {
            echo "✅ CI/CD pipeline executed successfully"
        }
        failure {
            echo "❌ Pipeline failed"
        }
    }
}
