pipeline {
    agent any

    tools {
        maven 'Maven-3.8.7'
    }

    environment {
        // SonarQube
        SONAR_HOST_URL    = 'http://13.201.183.221:9000'
        SONAR_PROJECT_KEY = 'myweb'

        // Build
        APP_NAME = 'myweb'
        VERSION  = '8.2.0'
        WAR_FILE = "target/myweb-8.2.0.war"

        // Docker
        DOCKER_IMAGE = 'sandeepgoudgandu/spring-boot-mongo'
    }

    stages {

        stage('Git Checkout') {
            steps {
                git credentialsId: 'git-pat',
                    url: 'https://github.com/Sandeepgoudgandu/myweb.git'
            }
        }

        stage('Maven Build & Sonar Scan') {
            steps {
                withCredentials([string(credentialsId: 'sonar-token', variable: 'SONAR_TOKEN')]) {
                    sh """
                      mvn clean package sonar:sonar \
                      -Dsonar.projectKey=${SONAR_PROJECT_KEY} \
                      -Dsonar.host.url=${SONAR_HOST_URL} \
                      -Dsonar.login=${SONAR_TOKEN}
                    """
                }
            }
        }

        stage('Upload WAR to Nexus') {
            steps {
                nexusArtifactUploader(
                    artifacts: [[
                        artifactId: 'myweb',
                        classifier: '',
                        file: 'target/myweb-8.2.0.war',
                        type: 'war'
                    ]],
                    credentialsId: 'nexus3',
                    groupId: 'in.javahome',
                    nexusUrl: '172.31.25.241:8081',
                    nexusVersion: 'nexus3',
                    protocol: 'http',
                    repository: 'sample-releases',
                    version: '8.2.0'
                )
            }
        }

        stage('Build Docker Image') {
            steps {
                sh """
                  docker build -t ${DOCKER_IMAGE}:${BUILD_NUMBER} .
                  docker tag ${DOCKER_IMAGE}:${BUILD_NUMBER} ${DOCKER_IMAGE}:latest
                """
            }
        }

        stage('Push Docker Image') {
            steps {
                withCredentials([string(credentialsId: 'DOCKER_HUB_CREDENTIALS', variable: 'DOCKER_PASS')]) {
                    sh """
                      docker login -u sandeepgoudgandu -p ${DOCKER_PASS}
                      docker push ${DOCKER_IMAGE}:${BUILD_NUMBER}
                      docker push ${DOCKER_IMAGE}:latest
                    """
                }
            }
        }

        // üî• FIXED KUBERNETES DEPLOY STAGE
        stage('Deploy to Kubernetes') {
            steps {
                withCredentials([file(credentialsId: 'KUBERNETES_CLUSTER_CONFIG', variable: 'KUBECONFIG')]) {
                    sh '''
                      kubectl apply -f springBoot.yml
                      kubectl rollout status deployment/myweb-deployment
                    '''
                }
            }
        }
    }

    post {
        success {
            echo "‚úÖ Git ‚Üí Maven ‚Üí Sonar ‚Üí Nexus ‚Üí Docker ‚Üí Kubernetes SUCCESS"
            echo "üöÄ Image: ${DOCKER_IMAGE}:${BUILD_NUMBER}"
        }
        failure {
            echo "‚ùå Pipeline failed. Check Jenkins logs."
        }
    }
}
